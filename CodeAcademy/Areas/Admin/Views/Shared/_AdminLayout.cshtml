                        <a class="collapse-item" asp-area="Admin" asp-controller="Group" asp-action="Create">Add</a>
                    </div>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTeacher"
                   aria-expanded="true" aria-controls="collapseTwo">
                    <i class="fas fa-fw fa-hashtag"></i>
                    <span>Teacher</span>
                </a>
                <div id="collapseTeacher" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" asp-area="Admin" asp-controller="Teacher" asp-action="Index">View</a>
                        <a class="collapse-item" asp-area="Admin" asp-controller="Teacher" asp-action="Create">Add</a>
